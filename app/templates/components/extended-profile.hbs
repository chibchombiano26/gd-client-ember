{{yield}}

        <!-- Card Projects -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-image">
                    <span class="card-title">Personal info</span>
                </div>
                
                <div class="card-content">
                    <form class="form" {{action "save" on="submit"}}>
  
                     <legend>Personal info</legend>
  
                      <div class="control-group">
                        <div class="control-label">
                          <label>Username</label>
                        </div>
                    
                        <div class="controls">
                          {{input value=username type="text" class="form-control"}}
                        </div>
                      </div>
                      
                      <div class="control-group">
                        <div class="control-label">
                          <label>Date of birth: {{dateOfBirthShow}}</label>
                        </div>
                    
                        <div class="controls">
                          {{input value=dateOfBirth type="date" class="form-control"}}
                        </div>
                      </div>
                    </form>
                </div>
                
                <div class="card-action">
                    <button type="submit" class="btn btn-primary">Save extended info</button>
                </div>
            </div>
        </div>